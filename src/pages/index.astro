---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import HeroSection from '../components/HeroSection';
import AboutSection from '../components/AboutSection';
import PortfolioSection from '../components/PortfolioSection';
import ProductsSection from '../components/ProductsSection';
import WorkshopsSection from '../components/WorkshopsSection';
import CourseTeaser from '../components/CourseTeaser';
import TestimonialsSection from '../components/TestimonialsSection';
import FinalCTA from '../components/FinalCTA';
import Footer from '../components/Footer';

const title = "Layout Reset | Seções Organizadas";
const description = "Layout resetado com seções organizadas e componentes separados";
---

<Layout 
  title={title}
  description={description}
>
  <!-- Header -->
  <Header client:load />

  <!-- Main Content -->
  <main>
    
    <!-- Hero Section -->
    <HeroSection client:visible />

    <!-- About Section -->
    <AboutSection client:visible />

    <!-- Portfolio Section -->
    <PortfolioSection client:visible />

    <!-- Products Section -->
    <ProductsSection client:visible />

    <!-- Workshops Section -->
    <WorkshopsSection client:visible />

    <!-- Course Teaser Section -->
    <CourseTeaser client:visible />

    <!-- Testimonials Section -->
    <TestimonialsSection client:visible />

    <!-- Final CTA Section -->
    <FinalCTA client:visible />

  </main>

  <!-- Footer -->
  <Footer client:load />
</Layout>
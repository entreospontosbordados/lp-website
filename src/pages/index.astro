---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header';
import HeroSection from '@/components/HeroSection';
import FeaturesSection from '@/components/FeaturesSection';
import AboutSection from '@/components/AboutSection';
import StatsSection from '@/components/StatsSection';
import TestimonialsSection from '@/components/TestimonialsSection';
import FAQSection from '@/components/FAQSection';
import FinalCTA from '@/components/FinalCTA';
import Footer from '@/components/Footer';

const title = "Landing Page Modular | Componentes Reutilizáveis";
const description = "Landing page construída com componentes modulares e reutilizáveis para máxima flexibilidade";
---

<Layout 
  title={title}
  description={description}
>
  <!-- Header -->
  <Header client:load />

  <!-- Main Content -->
  <main>
    
    <!-- Hero Section -->
    <HeroSection client:visible />

    <!-- Features Section -->
    <FeaturesSection client:visible />

    <!-- About Section -->
    <AboutSection client:visible />

    <!-- Stats Section -->
    <StatsSection client:visible />

    <!-- Testimonials Section -->
    <TestimonialsSection client:visible />

    <!-- FAQ Section -->
    <FAQSection client:visible />

    <!-- Final CTA Section -->
    <FinalCTA client:visible />

  </main>

  <!-- Footer -->
  <Footer client:load />
</Layout>
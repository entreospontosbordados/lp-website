---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import HeroSection from '../components/HeroSection';
import AboutSection from '../components/AboutSection';
import PortfolioSection from '../components/PortfolioSection';
import ProductsSection from '../components/ProductsSection';
import WorkshopsSection from '../components/WorkshopsSection';
import CourseTeaser from '../components/CourseTeaser';
import TestimonialsSection from '../components/TestimonialsSection';
import FinalCTA from '../components/FinalCTA';
import Footer from '../components/Footer';

const title = "Arte em Bordados | Bordados Livres Artesanais Únicos em Blumenau";
const description = "Bordados livres artesanais únicos e exclusivos. Oficinas presenciais em Blumenau, produtos personalizados e riscos para bordar. Arte que transforma momentos especiais.";
const keywords = "bordado livre, bordados artesanais, oficinas bordado, Blumenau, porta aliança bordado, porta maternidade, bordados personalizados, riscos para bordar, curso bordado, artesanato";
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
  author="Arte em Bordados"
>
  <!-- Skip Navigation Link for Accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-rose-600 text-white px-4 py-2 rounded-md z-50">
    Pular para o conteúdo principal
  </a>

  <!-- Header with Navigation -->
  <Header client:load />

  <!-- Main Content -->
  <main id="main-content" class="overflow-hidden">
    
    <!-- Hero Section -->
    <HeroSection client:visible />

    <!-- About the Artist -->
    <AboutSection client:visible />

    <!-- Portfolio/Gallery -->
    <PortfolioSection client:visible />

    <!-- Products and Digital Patterns -->
    <ProductsSection client:visible />

    <!-- Workshops in Blumenau -->
    <WorkshopsSection client:visible />

    <!-- Online Course Teaser -->
    <CourseTeaser client:visible />

    <!-- Testimonials -->
    <TestimonialsSection client:visible />

    <!-- Final CTA -->
    <FinalCTA client:visible />

  </main>

  <!-- Footer -->
  <Footer client:load />
</Layout>
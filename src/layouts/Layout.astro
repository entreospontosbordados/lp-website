---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  author?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Bordados livres artesanais únicos e exclusivos. Oficinas presenciais em Blumenau, produtos personalizados e riscos para bordar. Arte que transforma momentos especiais.",
  keywords = "bordado livre, bordados artesanais, oficinas bordado, Blumenau, porta aliança bordado, porta maternidade, bordados personalizados, riscos para bordar, curso bordado",
  author = "Arte em Bordados",
  ogImage = "/og-image.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <!-- Meta Tags Básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Arte em Bordados" />
    <meta property="og:locale" content="pt_BR" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Arte em Bordados",
      "description": "Bordados livres artesanais únicos e exclusivos. Oficinas presenciais em Blumenau.",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Blumenau",
        "addressRegion": "SC",
        "addressCountry": "BR"
      },
      "serviceArea": {
        "@type": "Place",
        "name": "Brasil"
      },
      "makesOffer": [
        {
          "@type": "Offer",
          "name": "Oficinas de Bordado Livre",
          "category": "Artesanato"
        },
        {
          "@type": "Offer", 
          "name": "Bordados Personalizados",
          "category": "Produtos Artesanais"
        }
      ]
    }
    </script>
  </head>
  
  <body class="min-h-screen bg-gradient-to-b from-rose-50 to-white font-inter text-slate-800 antialiased">
    <!-- Skip Navigation Link -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-rose-600 text-white px-4 py-2 rounded-md z-50">
      Pular para o conteúdo principal
    </a>
    
    <slot />
  </body>
</html>

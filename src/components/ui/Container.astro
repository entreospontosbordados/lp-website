---
export interface Props {
  className?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
}

const { className = '', size = 'lg' } = Astro.props;

const sizes = {
  sm: 'max-w-2xl',
  md: 'max-w-4xl', 
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full'
};

const containerClasses = `mx-auto px-4 sm:px-6 lg:px-8 ${sizes[size]} ${className}`;
---

<div class={containerClasses}>
  <slot />
</div>

          </Button>
        </div>
      </Card>
      
      <!-- Product 5 -->
      <Card client:load className="group">
        <div class="relative overflow-hidden rounded-lg mb-4">
          <!-- SUBSTITUIR: Foto do kit completo para iniciantes (bastidor, linhas, agulhas, etc.) -->

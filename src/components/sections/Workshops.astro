                <p class="text-sm text-neutral-600">Ao final do curso</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Pricing -->
        <Card client:load className="bg-gradient-to-br from-primary-50 to-secondary-50 border-primary-200">
          <div class="text-center space-y-4">
            <h4 class="font-serif text-xl font-bold text-neutral-900">Investimento</h4>
            <div class="space-y-2">
